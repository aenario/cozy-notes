// Notes 

#editor
    width: 100%
    height: 70%
    padding: 0
    margin: 0

#note-area
    height: 100%
    margin: 0
    background: #F5F5F5
    
#note-style
    background: #FDFDFD
    background-image: url('../img/note-corner.png')
    background-position: right top
    background-repeat: no-repeat
    border: 1px solid lightgrey + 30%
    box-shadow: 1px 1px 2px #DDD
    margin-left: 2%
    margin-right: 2%
    padding: 20px 50px

#editor-container
    margin-left: 2%
    margin-right: 2%
    height: 100%
    width: 100%

#editorIframe
    width: 96%
    height: 100%

.note-full
    background: #F5F5F5
    border-radius: 3px
    height: 100%
    margin: 0
    padding: 0 
    border: 0
    
#note-full-title
    font-family: main
    color: #222
    height: 35px
    border: 0px
    font-size: 30px
    margin-left: 30px
    letter-spacing: -2px
    margin-right: 2% 
    width: 92%
    background: none repeat scroll 0 0 transparent
    margin-top: 20px
    margin-bottom: 20px
    
#note-full-title:focus
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6)
    border-color: rgba(82, 168, 236, 0.8)
    outline: 0 none
    background-color: white
    

.progress
    width: 50%
    position: absolute
    
#drag
    z-index: -1
    bottom: 22px;
    left: 17px;
    position: absolute;
    right: 15px;
    top: 112px;

#editor-button-bar
    position: absolute

    left: 3.5%;
    top: 200px;

    .btn
        background-color: #FCFCFC
        background-image: none
        box-shadow: inset -4px 0px 3px #F5F5F5
        padding: 8px 8px 8px 8px

    .btn:active
    .active
        background-color: #EAEAEA
        box-shadow: inset 4px 0px 3px #EAEAEA - 10%

    .btn
        i
            background-position: 0 0

        i.icon-indent-left
            background-image: url('../img/menu-indent-left.png')

        i.icon-indent-right
            background-image: url('../img/menu-indent-right.png')

        i.icon-th-list
            background-image: url('../img/menu-bullet-point.png')

        i.icon-text-height
            background-image: url('../img/menu-title.png')

        i.icon-download-alt
            background-image: url('../img/menu-save.png')

    .btn:hover
        i.icon-indent-left
            background-image: url('../img/menu-indent-left-over.png')
        i.icon-indent-right
            background-image: url('../img/menu-indent-right-over.png')
        i.icon-th-list
            background-image: url('../img/menu-bullet-point-over.png')
        i.icon-text-height
            background-image: url('../img/menu-title-over.png')
        i.icon-download-alt
            background-image: url('../img/menu-save-over.png')


// File list
#note-file-list .note-file:first-child
    border: 0

#note-file-list #file-list
    display: none

#file-number
    float: left
    padding: 6px

#file-pic
    position: absolute
    left: 60%
    top: -16px
    height: 40px
    width: 27px
    background-image: url('../img/attachment.png')

#note-file-list
    min-width: 250px
    position: absolute
    right: 14%
    top: 75px
    background: white
    border: 1px solid lightgrey
    text-align: center
    padding: 0 0 10px 0
    margin: 0
    font-family: main, helvetica
    color: lightgrey
    box-shadow: 1px 1px 2px #EEE

    .note-file
        display: none
        margin-top: 5px
        padding-left: 10px
        padding-bottom: 3px
        z-index: 10
        border-top: 1px solid lightgrey

        a
            font-size: 0.9em
            color: lightgrey - 20%


        a:hover
            color: lightgrey - 50%

        button
            font-size: 0.6em
            border: none
            background: white
            color: lightgrey

        button:hover
            text-decoration: underline
            color: lightgrey - 20%




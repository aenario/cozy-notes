iframe
    border: 0

#help-info
    text-align: center
    margin-top: 3%
    color: #999

#note-full-breadcrumb
    font-family: main
    font-size: 14px
    border: 0
    margin-top: 20px
    margin-bottom: 20px
    margin-left: 2%
    margin-right: 2%
    color: darkgrey

    a
        color: darkgrey


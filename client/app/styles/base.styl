// Functions
@import 'nib'

// Colors

lightgrey = #FAFAFA
bggrey = #F4F4F4
whitegrey = #FCFCFC
darkgrey = #333
grey = #E8E8E8
blue = #7DBBF4 - 20%

// Base styles

html
body  
#home-view
  height 100%
  padding 0
  margin 0
  overflow: hidden
  box-sizing border-box

body
  color: darkgrey
  background-color: whitegrey

a:focus, a:hover
  text-decoration: underline

h1, h2, h3, h4, h5
  font-weight: normal
  color: darkgrey
  clear: left

.spacer
  clear both

.no-padding
    padding: 0

.pl1
    padding-left: 10px

.tooltip-inner
    background-color: blue
    opacity: 1
    background-opacity: 1

.tooltip.top .tooltip-arrow
    border-top-color: blue
.tooltip.right .tooltip-arrow
    border-right-color: blue
.tooltip.left .tooltip-arrow
    border-left-color: blue
.tooltip.bottom .tooltip-arrow
    border-bottom-color: blue

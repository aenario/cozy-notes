// Functions
@import 'nib'

// Colors

lightgrey = #FAFAFA
bggrey = #F4F4F4
whitegrey = #FCFCFC
darkgrey = #333
grey = #E8E8E8
blue = #7DBBF4 - 20%
orange = #fe8800
blue = #34a6ff
lightblue = #CBE4FB
lightorange = #FFC47F

// Base styles

::selection
    background: orange
::-moz-selection
    background: orange

html
body
#home-view
  height 100%
  padding 0
  margin 0
  overflow: hidden
  box-sizing border-box

body
  font-family: main, helvetica
  color: darkgrey
  background-color: whitegrey
  line-height: 1.25em

a:focus, a:hover
  text-decoration: underline

h1, h2, h3, h4, h5
  font-weight: normal
  color: darkgrey
  clear: left

h1
    font-size: 1.7em

h2
    font-size: 1.55em

h3
    font-size: 1.40em

h4
    font-size: 1.25em

h5
    font-size: 1.1em

.spacer
  clear both

.no-padding
    padding: 0

.pl1
    padding-left: 0.6em

.tooltip.in
    opacity: 1
.tooltip-inner
    background-color: #1283FF
.tooltip.top .tooltip-arrow
    border-top-color: #1283FF
.tooltip.right .tooltip-arrow
    border-right-color: #1283FF
.tooltip.left .tooltip-arrow
    border-left-color: #1283FF
.tooltip.bottom .tooltip-arrow
    border-bottom-color: #1283FF

@media (max-width: 10in)
    body
        font-size: 0.17in

@media (min-width: 10.01in)
    body
        font-size: 0.19in

@media (min-width: 16in)
    body
        font-size: 0.21in

@media (min-width: 24in)
    body
        font-size: 0.23in

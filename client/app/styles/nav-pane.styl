lightgrey = #FAFAFA
bggrey = #F4F4F4
whitegrey = #FCFCFC
darkgrey = #333
grey = #E8E8E8
blue = #7DBBF4

// Nav container styles

#nav
    background: bggrey
    color: darkgrey
    font-family: main, helvetica
    padding: 0

#my-notes
    padding-left: 18px
    border-top: 1px solid whitegrey

    #my-notes-pic
        margin-top: 15px

    #create-note
        float: right
        cursor: pointer
        width: 31px
        height: 31px
        background-image: url('../img/add-corner.png')

    #create-note:hover
        background-image: url('../img/add-corner-over.png')

// Tree styles

#tree
    outline: none
    margin-top: 10px
    border-top: 1px solid grey
    border-bottom: 1px solid grey
    font-size: 14px
    background-color: transparent

    #tree-node-all > ins:first-child
        display: none
    #tree-node-all > a
        display: none
    #tree-node-all
        padding: 0
    #tree-node-all > ul
        padding: 20px 0
        margin: 0
    #tree-node-all > li
        padding: 0

    li
        position relative
        margin-left: 10px
    li:last-child
        border-bottom: 1px solid whitegrey

    ul > li > ul > li:last-child
        border-bottom: 0
